<Window x:Class="MenuWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuWindow"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="500" Background="DeepSkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2">
            <Label Content="EDITOR" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Grid>

        <Grid Grid.Row="3">
            <TextBox x:Name="EditeurTextBox" Width="250" Margin="5"/>
        </Grid>

        <Grid Grid.Row="4">
            <Label Content="TITLE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Grid>

        <Grid Grid.Row="5">
            <TextBox x:Name="TitreTextBox" Width="250" Margin="5"/>
        </Grid>

        <Grid Grid.Row="6">
            <Label Content="SUPPORT" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Grid>

        <Grid Grid.Row="7">
            <TextBox x:Name="SupportTextBox" Width="250" Margin="5"/>
        </Grid>

        <Grid Grid.Row="8">
            <Label Content="DESCRIPTION" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Grid>

        <Grid Grid.Row="9">
            <TextBox x:Name="DescriptionTextBox" Width="450" Margin="5" TextWrapping="Wrap"/>
        </Grid>

        <Grid Grid.Row="10">
            <Label Content="DATE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        </Grid>

        <Grid Grid.Row="11">
            <DatePicker x:Name="DateSortieDatePicker" Margin="5,5,10,5" Width="150"/>
        </Grid>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Image Source="/Images/PhotoLogo.png" Width="100"/>
            </Grid>

            <Grid Grid.Column="1">
                <Image Source="/Images/VideoLogo2.png" Width="100"/>
            </Grid>

            <Grid Grid.Column="2">
                <Image Source="Images/AjoutJeu.png" Width="100"/>
            </Grid>

            <Grid Grid.Column="3">
                <Image Source="/Images/LogoEdit.png" Width="100"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox x:Name="ImageUrlTextBox" Width="150" Margin="5"/>
                <Button x:Name="Image" Content="SELECT IMAGE" Width="150" Margin="5" HorizontalAlignment="Center" Click="Image_Click" Background="Azure" BorderBrush="DeepSkyBlue" BorderThickness="3"/>
            </Grid>

            <Grid Grid.Column="1">
                <TextBox x:Name="VideoUrlTextBox" Width="150" Margin="5"/>
                <Button x:Name="Video" Content="SELECT VIDEO" Width="150" Margin="5" HorizontalAlignment="Center" Click="Video_Click" Background="Azure" BorderBrush="DeepSkyBlue" BorderThickness="3"/>
            </Grid>

            <Grid Grid.Column="2">
                <Button x:Name="AddGame" Content="ADD GAME" Click="AddGame_Click" Width="150" Margin="5" HorizontalAlignment="Center" Background="Azure" BorderBrush="DeepSkyBlue" BorderThickness="3"/>
            </Grid>

            <Grid Grid.Column="3">
                <Button x:Name="EditGame" Content="MODIFY GAME" Click="EditGame_Click" Width="150" Margin="5" HorizontalAlignment="Center" Background="Azure" BorderBrush="DeepSkyBlue" BorderThickness="3"/>
            </Grid>
        </Grid>


    </Grid>
</Window>
