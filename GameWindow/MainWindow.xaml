<Window x:Class="GameWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWindow"
        xmlns:GameClass="clr-namespace:GameManagementClassLibrary;assembly=GameManagementClassLibrary"
        mc:Ignorable="d"
        Title="GameManagement" Height="500" Width="900" Background="DeepSkyBlue">
    <Window.DataContext>
        <GameClass:Jeu/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="4">
                <DataGrid x:Name="MyDG" AutoGenerateColumns="False" Background="DeepSkyBlue" IsReadOnly="True" Visibility="Hidden" Width="600" SelectionChanged="MyDG_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Editor" Binding="{Binding Editeur}" Width="167"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Titre}" Width="167"/>
                        <DataGridTextColumn Header="Support" Binding="{Binding Support}" Width="167"/>

                        <DataGridTextColumn Header="DateRelease" Binding="{Binding DateSortie}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="Clear" Click="Clear_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/ClearData.png" Height="30"/>
                </Button>
            </Grid>


        </Grid>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Username" Grid.Column="0">
                <TextBox x:Name="User" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="120" BorderBrush="DeepSkyBlue" Background="DeepSkyBlue"/>
            </Grid>

            <Grid x:Name="Add" Grid.Column="1">
                <Button x:Name="AddButton"  Click="AddButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="90" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/AjoutJeu.png" Width="100"/>
                </Button>
            </Grid>

            <Grid x:Name="Modify" Grid.Column="2">
                <Button x:Name="ModifyButton" Click="ModifyButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/LogoEdit.png" Width="50" Height="48" VerticalAlignment="Center"/>
                </Button>
            </Grid>

            <Grid x:Name="Delete" Grid.Column="3">
                <Button x:Name="DeleteButton" Click="DeleteButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="80" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/LogoRemove.png" Width="100"/>
                </Button>
            </Grid>

            <Grid x:Name="View" Grid.Column="4">
                <Button x:Name="ViewButton" Click="ViewButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="60" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/SeeGame.png" Width="100" Stretch="Uniform"/>
                </Button>
            </Grid>

            <Grid x:Name="Editor" Grid.Column="5">
                <Button x:Name="EditorButton" Click="EditorButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="110" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                    <Image Source="Images/GameEditor2.png" Width="100"/>

                </Button>
            </Grid>
        </Grid>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>



            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Image x:Name="GameImage" Source="{Binding Jeu.ImageUrl, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Stretch="Uniform"/>
                    <MediaElement x:Name="GameVideo" Source="{Binding Jeu.VideoUrl, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" MediaEnded="GameVideo_MediaEnded" LoadedBehavior="Manual" Stretch="Uniform"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="25*"/>

                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Button x:Name="PHOTO" Click="PHOTO_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Width="60" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                            <Image Source="Images/PhotoLogo.png" Width="50" Height="50"/>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="1"/>

                    <Grid Grid.Column="3">
                        <Button x:Name="VIDEO" Click="VIDEO_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Width="60" Background="DeepSkyBlue" BorderBrush="DeepSkyBlue">
                            <Image Source="Images/VideoLogo2.png" Height="35" VerticalAlignment="Top"/>
                        </Button>
                    </Grid>


                </Grid>




            </Grid>


            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="TITLE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" />
                </Grid>

                <Grid Grid.Row="1">
                    <TextBox x:Name="GameTitle" FontSize="15" BorderBrush="LightBlue" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Titre, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="98*"/>
                        <ColumnDefinition Width="45*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="SUPPORT" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="17" Margin="174,0,0,0"/>
                </Grid>

                <Grid Grid.Row="3">
                    <TextBox x:Name="GameSupport" FontSize="15" IsReadOnly="True" BorderBrush="LightBlue" TextWrapping="Wrap" Text="{Binding Support, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Label Content="DESCRIPTION" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17"/>
                </Grid>

                <Grid Grid.Row="5">
                    <TextBox x:Name="GameDescription" FontSize="15" IsReadOnly="True" Height="70" Width="430" TextWrapping="Wrap" BorderBrush="LightBlue" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="6">
                    <Label Content="DATE OF RELEASE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17"/>
                </Grid>

                <Grid Grid.Row="7">
                    <TextBox x:Name="GameDate" FontSize="15" IsReadOnly="True" BorderBrush="LightBlue" TextWrapping="Wrap" Text="{Binding DateSortie,UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:dd/MM/yyyy\}}"/>
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="53*"/>
                <ColumnDefinition Width="127*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InformationsMessage" Text="{Binding Informations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderBrush="DeepSkyBlue" BorderThickness="10" IsReadOnly="True" Grid.ColumnSpan="2"/>

        </Grid>

    </Grid>
</Window>
